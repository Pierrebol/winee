<div class="container-index">
  <div class="search-bar-container" id="search-bar-second">
    <form class="search_bar" action= <%= wines_all_path %>>
      <input type="text"
          placeholder="Rechercher un vin..."
          name="search">
      <button>
        <i class="fa fa-search"
            style="font-size: 18px;">
        </i>
      </button>
    </form>
    <button id="" class="stock-btn" data-toggle="modal" data-target="#exampleModal">
      Stocker une bouteille
    </button>

    <div class="modal fade " id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Stocker une bouteille</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <%= simple_form_for(@winebox) do |f| %>
              <%= f.association :wine, class: 'select2' %>
              <%= f.input :quantity_of_wine %>
              <div class="modal-footer">
                <button type="button" class="stock-btn" data-dismiss="modal">Annuler</button>
                <%= f.submit class: 'modal-button' %>
              </div>
            <% end %>
          </div>

        </div>
      </div>
    </div>
  </div>

  <div class="filter-content">
    <div class="filters">
      <div class="choice-category">
        <div class="category-vin btn-category" data-btncategory="Vin">
          Vins
        </div>
        <div class="category-spiritueux btn-category" data-btncategory="Spiritueux">
          Spiritueux
        </div>
      </div>

      <div class="all-filters">

        <div class="filter_category">
          <label for="category-select"><strong>Cat√©gorie :</strong></label><br>
            <div id="list1" class="dropdown-check-list" tabindex="100">
              <span class="anchor">Choix :</span>
              <ul class="items">
                <li class="checkbox-cat dropdown-item p-0" data-categoryselect="Rouge"><input type="checkbox" hidden=true /> Rouge </li>
                <li class="checkbox-cat dropdown-item p-0" data-categoryselect="Blanc"><input type="checkbox" hidden=true /> Blanc </li>
                <li class="checkbox-cat dropdown-item p-0" data-categoryselect="Ros√©"><input type="checkbox" hidden=true /> Ros√© </li>
                <li class="checkbox-cat dropdown-item p-0" data-categoryselect="Champagne"><input type="checkbox" hidden=true /> Champagne </li>
              </ul>
            </div>
        </div>

<!--         <div class="filter_cepage">
          <label for="cepage-select"><strong>C√©page :</strong></label><br>
            <div id="list2" class="dropdown-check-list" tabindex="100">
              <span class="anchor">Choix :</span>
              <ul class="items">
                <li><input type="checkbox" /> Syrah </li>
                <li><input type="checkbox" /> Roussanne </li>
                <li><input type="checkbox" /> Viognier </li>
                <li><input type="checkbox" /> Grenache blanc </li>
                <li><input type="checkbox" /> Marsanne </li>
                <li><input type="checkbox" /> Roussanne </li>
              </ul>
            </div>
        </div> -->

        <div class="filter_country">
          <label for="country-select"><strong>Pays :</strong></label><br>
            <div id="list3" class="dropdown-check-list" tabindex="100">
              <span class="anchor">Choix :</span>
              <ul class="items">
                <li class="checkbox-country dropdown-item p-0" data-countryselect="France"><input type="checkbox" hidden=true/> France </li>
                <li class="checkbox-country dropdown-item p-0" data-countryselect="Italie"><input type="checkbox" hidden=true/> Italie </li>
                <li class="checkbox-country dropdown-item p-0" data-countryselect="Espagne"><input type="checkbox" hidden=true/> Espagne </li>
              </ul>
            </div>
        </div>

        <div class="filter_year">
          <label for="year-select"><strong>Mill√©sime :</strong></label><br>
          <div id="list4" class="dropdown-check-list" tabindex="100">
            <% years=(1900..2021) %>
            <span class="anchor">Choix :</span>
            <ul class="items">
              <%= years.reverse_each do |year| %>
                <li class="checkbox-year dropdown-item p-0" data-yearselect="<%=year%>"><input type="checkbox" hidden=true/> <%= year %> </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
      <div class="cards-container-all">
        <h2> Mes bouteilles </h2>
        <div class="cards-all">
            <% @wineboxes.each do |winebox| %>
            <div class="card" data-category="<%= winebox.wine.category %>" data-country="<%= winebox.wine.country %>" data-year="<%= winebox.wine.year%>">
              <%= link_to wine_path(Wine.find(winebox.wine_id)), class: "link-wine" do%>
                <div class="card-wine-img">
                  <%= cl_image_tag Wine.find(winebox.wine_id).photo.key, crop: :fill %>
                </div>
              <% end %>
              <div class="infos-quantity-actions">
                <div class="infos-quantity">
                  <div class="infos">
                    <p> <%= Wine.find(winebox.wine_id).name %> </p>
                    <p> <%= Wine.find(winebox.wine_id).vineyard %> </p>
                  </div>
                  <div class="quantity">
                    <p> <%= winebox.quantity_of_wine %> üç∑ </p>
                  </div>
                </div>
                <div class="buttons-action">
                  <button class="add_to_basket_button">
                    <p>Ajouter au panier</p>
                  </button>
                  <button>
                    <p>Se faire livrer</p>
                  </button>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
  </div>

</div>

