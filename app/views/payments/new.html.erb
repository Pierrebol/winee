<div class="container">
  <div class="row py-4">
    <!-- <div class="col-md-3"><%#= image_tag @order.teddy.photo_url, width: '100%' %></div> -->
    <div class="col confirmation-content-container">
      <h1>Confirmation de votre panier</h1>
      <div class="content-confirmation">
        <p>Votre commande contient <%= @order.order_wines.count %> types de bouteilles diff√©rentes </p>
        <p>Vous en avez pour un total de <strong><%= humanized_money_with_symbol @order.total_price %></strong></p>
      </div>
      <button id="pay" class="btn btn-primary">Payer</button>
      <script src="https://js.stripe.com/v3/"></script>
      <script>
        const paymentButton = document.getElementById('pay');
        paymentButton.addEventListener('click', () => {
          const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
          stripe.redirectToCheckout({
            sessionId: '<%= @order.checkout_session_id %>'
          });
        });
      </script>
    </div>
  </div>
</div>
