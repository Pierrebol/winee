<div class= "deliveries_title">
  <h1>Vos demandes de livraisons pass√©es:</h1>
</div>

<div class="past_deliveries">
  <% @my_deliveries.where(status: ["paid"]).each do |delivery| %>
    <div class="notification-content">
      <div class="cart-product-head">
        <div class="item-head-content status">
          <h5>Status: </h5>
          <p><%= delivery.status %></p>
        </div>
        <div class="item-head-content date">
          <h5>Date:</h5>
          <p><%= delivery.date %></p>
        </div>
        <div class="item-head-content prix">
          <h5>Prix total:</h5>
          <p><%= humanized_money_with_symbol delivery.total_price %></p>
        </div>
      </div>
      <div class="order-items">
        <% delivery.delivery_products.each do |delivery_product| %>
          <div class="order-item">
            <div class="item-name">
              <p><%= delivery_product.wine.name %> </p>
            </div>
            <div class="item-quantity">
              <p><%= delivery_product.quantity_of_wine %> </p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
