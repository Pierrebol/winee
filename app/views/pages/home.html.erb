<body>
  <div class="main-container">
    <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url(https://images.unsplash.com/photo-1596142332133-327e2a0ff006?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=750&q=80);">
      <div class="container">
        <div class="search_bar">
          <form action="#">
            <input type="text"
                placeholder="Rechercher un vin..."
                name="search">
            <button href="#">
              Rechercher
            </button>
          </form>
        </div>
      </div>
    </div>

    <div class="card-value-container">
      <div class="card-value">
        <%= image_tag "en_ligne.png", alt: "alttext" %>
        <div class="card-value-infos">
          <h2> Votre cave en ligne </h2>
        </div>
      </div>
      <div class="card-value">
        <%= image_tag "securite.png", alt: "alttext" %>
        <div class="card-value-infos">
          <h2> Un stockage sécurisé </h2>
        </div>
      </div>
      <div class="card-value">
        <%= image_tag "livraison.png", alt: "alttext" %>
        <div class="card-value-infos">
          <h2> Une livraison rapide </h2>
        </div>
      </div>
    </div>

    <div class="cards-container">
      <div class="container-title">
        <p>Notre sélection de la semaine</p>
      </div>

      <div class="cards">
        <% @wines.sample(4).each do |wine| %>
          <div class="card">
            <%= link_to wine_path(wine), class: "link-wine" do %>
              <div class="card-wine-img">
                <%= cl_image_tag wine.photo.key, crop: :fill %>
              </div>
            <% end %>
            <div class="infos-quantity-actions">
              <div class="infos-quantity">
                <div class="infos">
                  <p> <%= wine.name %> </p>
                  <p> <%= wine.vineyard %> </p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>


    <h1>Ils parlent de nous</h1>
    <div class="container-carrousel">
      <div class="carousel">
        <div class="card-body-carousel">
          <h5 class="card-title">Martine</h5>
          <h6 class="card-subtitle">Amatrice de Bordeaux</h6>
          <div class="testify">
            <i class="fas fa-quote-left"></i>
            <p class="card-text"><em>Grâce à Doushka et au déguisement de Samba j'ai passé un super carnaval de Dunkerque.</em></p>
            <i class="fas fa-quote-right"></i>
          </div>
        </div>
        <div class="card-body-carousel">
          <h5 class="card-title">Martine</h5>
          <h6 class="card-subtitle">Fan du Brésil</h6>
          <div class="testify">
            <i class="fas fa-quote-left"></i>
            <p class="card-text"><em>Grâce à Doushka et au déguisement de Samba j'ai passé un super carnaval de Dunkerque.</em></p>
            <i class="fas fa-quote-right"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
<script type="text/javascript" src="//code.jquery.com/jquery-1.11.0.min.js"></script>
<script type="text/javascript" src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
<script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
<script type="text/javascript">
  $('.carousel').slick({
    slidesToShow: 1,
    slidesToScroll: 1,
    autoplay: true,
    autoplaySpeed: 2500,
  });
</script>
</body>
