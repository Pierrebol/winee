<div class="card">
  <%= link_to wine_path(wine), class: "link-wine" do%>
    <div class="card-wine-img">
      <%= cl_image_tag wine.photo.key, crop: :fill %>
    </div>
  <% end %>
    <div class="infos-quantity">
      <div class="infos">
        <p> <%= wine.name %> </p>
        <p> <%= wine.vineyard %> </p>
      </div>
      <div class="quantity">
        <p> <%= wine.price %> â‚¬ </p>
      </div>
    </div>
    <div class="buttons-action">
      <p class="add_to_basket_button" data-toggle="modal" data-target="#wine-modal-<%= wine.id %>">Ajouter au panier</p>
      <p class="delivery_button" data-toggle="modal" data-target="#delivery-modal-<%= wine.id %>">Se faire livrer</p>
  </div>
</div>
<div class="modal fade" id="wine-modal-<%= wine.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body d-flex">
        <div class="wine-img">
          <div class="card-wine-img">
            <%= cl_image_tag wine.photo.key, crop: :fill %>
          </div>
        </div>
        <div class="form-quantity">
          <%= simple_form_for ([order, @order_wine]) do |f|%>
            <%= f.input :quantity_of_wine %>
            <%= f.input :wine_id, input_html: { value: wine.id }, as: :hidden %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
        <%= f.submit 'Ajouter au panier', class: "btn btn-primary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div class="modal fade" id="delivery-modal-<%= wine.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body d-flex">
        <div class="form-delivery">
          <%= simple_form_for([@delivery, @delivery_product]) do |f|%>
            <%= f.input :delivery_address, input_html: { value: current_user.address } %>
            <%= f.input :wine_id, input_html: { value: wine.id }, as: :hidden %>
        </div>
        <div id="map"
          style="width: 100%; height: 400px;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
        <%= f.submit 'Se faire livrer', class: "btn btn-primary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
