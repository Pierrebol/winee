<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path do %>
    <div class="navbar-brand">
    <%= image_tag "logo_winee.png" %>
    </div>
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
  <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <% if user_signed_in? %>
      <div class="nav-item">
      <%= link_to "Accueil", root_path, class: "nav-link" %>
      </div>
      <div class="nav-item">
      <%= link_to "Ma cave", my_cellar_path, class: "nav-link" %>
      </div>
      <div class="nav-item <%= %>">
      <%= link_to "Trouver une bouteille", wines_path, class: "nav-link" %>
      </div>
      <div class="nav-item <%= %>">
      <%= link_to "Nos conseils", root_path, class: "nav-link" %>
      </div>
      <div class="nav-item dropdown">
        <% img = "" %>
        <% if current_user.photo.attached? %>
          <%= cl_image_tag current_user.photo.key, class: "avatar", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Mon compte", root_path, method: :get, class: "dropdown-item" %>
          <%= link_to "Déconnexion", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        <% else %>
          <%= image_tag "gaspou.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Mon compte", root_path, method: :get, class: "dropdown-item" %>
          <%= link_to "Déconnexion", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        <% end %>
      </div>
    <% else %>
      <div class="nav-item">
        <%= link_to "Trouver une bouteille", wines_path, class: "nav-link" %>
      </div>
      <div class="nav-item">
        <%= link_to "Nos conseils", root_path, class: "nav-link" %>
      </div>
      <div class="nav-item">
        <%= link_to "A propos de Winee", root_path, class: "nav-link" %>
      </div>
      <div id="connexion">
        <%= link_to "CONNEXION 🍷", new_user_session_path, class: "nav-link" %>
      </div>
    <% end %>
    </div>
  </div>
</div>
